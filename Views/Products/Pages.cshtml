
@{
    ViewData["Title"] = "Pages";
}
@model List<ProductViewModel>
<h1>Pages</h1>
<h2>Page: @ViewBag.page </h2>
<h2>Pagesize: @ViewBag.pagesize </h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Renk</th>
            <th>yayınlansın mı</th>
            <th>süre</th>
            <th>açıklama</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>
                    @(item.IsPublish? "Evet" : "Hayır")
                </td>
                <td>@item.Expire</td>
                <td>
                    @if (item.Description.Length > 20)
                    {
                        @item.Description.Substring(0,20)

                        <text>...</text>
                    }
                    else
                    {
                        @item.Description
                    }
                </td>
                <td>
                    <a asp-controller="products" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">sil</a>
                </td>
                <td><a asp-controller="products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a></td>
                <td><a asp-controller="products" asp-action="GetById" asp-route-productid="@item.Id">ürün sayfasına git</a></td>
            </tr>
        }
    </tbody>
</table>
